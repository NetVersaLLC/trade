- content_for :head do
  :javascript
    $(function() {
      Tradebitcoin.view = new Tradebitcoin.views.Form();
    });
%h1 Awesome!
%p
  Thank you for joining! We believe that buying and selling Bitcoins can be an easy and safe process.
  %br/
  In order to proceed, please sign up or login using one of the services below.
%br{:class => "clear"}
= link_to (image_tag "/assets/facebook.png", :alt => "Facebook", :title => "Login with Facebook"), omniauth_authorize_path(resource_name, "facebook")
= link_to (image_tag "/assets/twitter.png", :alt => "Facebook", :title => "Login with Twitter"), omniauth_authorize_path(resource_name, "twitter")
%h2 Sign up form
.row
  .col-md-4
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:role => :form}) do |f|
      = render "form", action: "Sign up", f: f
  .col-md-1
  .col-md-7
    #map_canvas
    #status
%br{:class => "clear"}
= render "devise/shared/links"
