= form_for(@user) do |f|
  = f.text_field :name
  = f.text_field :email
  = f.password_field :current_password, placeholder: "Current password"
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .actions
    = f.submit
